@model StudentViewModel

<tr>
    <td>@Model.StudentInfo.Id</td>
    <td>@Model.StudentInfo.Name</td>
    <td>@Model.StudentInfo.Email</td>
    <td>
        @for(int i = 0; i < Model.Courses.Count; i++)
        {
            @Model.Courses[i]

            if(i < Model.Courses.Count - 1)
            {
                <span>, </span>
            }
        }
    </td>
    <td>
        @if(Model.IsTopStudent)
        {
            <span style="color: green; font-weight: bold;">Top Student</span>
        }
        else
        {
            <span style="color: gray;">Regular Student</span>
        }
    </td>
    <td>
        <input type="submit" name="Id" class="btn btn-info" value="@Model.StudentInfo.Id"/> 
    </td>
</tr>